<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtArabLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وَسَبِّحُوهُ بُكْرَةً وَأَصِيلًا"
            android:textColor="@color/colorWhite"
            android:textSize="35dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/txtArtiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“Dan bertasbihlah kepada-Nya diwaktu pagi dan sore.”"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/txtAyatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ QS. Al-Ahzab : 42 ]"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"/>


    </LinearLayout>
</RelativeLayout>
